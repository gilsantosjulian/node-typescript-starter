{
  "name": "shd-api",
  "version": "1.0.0",
  "description": "TypeScript microservices for SHD system",
  "main": "app.ts",
  "scripts": {
    "clean": "rm -rf ./dist",
    "copy-env-vars": "cp ./config/.env.example ./dist/config/.env.example",
    "build": "npm run clean && tsc",
    "build:dev": "npm run clean && webpack --config webpack.config.js",
    "start": "node dist/app.js",
    "start:dev": "nodemon app.ts",
    "lint": "tslint -c tslint.json 'api/**/*.ts'",
    "lint:write": "tslint --fix -c tslint.json 'api/**/*.ts'",
    "cz": "lint-staged && npx git-cz",
    "prettier": "prettier --write \"api/**/*.ts\" "
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/minkainc/shd-api/src"
  },
  "keywords": [
    "shd",
    "api",
    "invocies",
    "vendors"
  ],
  "author": "Julián Andrés Gil Santos",
  "contributors": [{
      "name": "Damian Fandiño",
      "email": "damian@minka.io"
    },
    {
      "name": "Luis Alfonso",
      "email": "luise@minka.io"
    }
  ],
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/prompt": "^8.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.4.1",
    "nodemon": "^1.19.1",
    "prettier": "1.18.2",
    "standard-version": "^6.0.1",
    "ts-loader": "^6.0.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "@google-cloud/debug-agent": "^4.0.1",
    "@google-cloud/logging-winston": "^1.1.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/md5": "^2.1.33",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "commitizen": "^3.1.1",
    "config": "^3.1.0",
    "dotenv": "^8.0.0",
    "dotenv-safe": "^6.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.1.1",
    "express-winston": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^8.2.1",
    "md5": "^2.2.1",
    "moment": "^2.24.0",
    "mysql": "^2.17.1",
    "path": "^0.12.7",
    "query-string": "^6.8.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typeorm": "^0.2.18",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "api/**/*.(ts)": [
      "prettier --write",
      "tslint --fix -c tslint.json",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./vendors/node_modules/cz-conventional-changelog"
    }
  }
}